<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;netcoreapp2.1;netstandard2.1;net5</TargetFrameworks>
    <Version>1.2.0</Version>
    <Description>Plugin for Retrying failing Nunit tests generated by Specflow</Description>
    <PackageProjectUrl>https://github.com/calrom-jtejero/specflow-retrycore</PackageProjectUrl>
    <RepositoryUrl>https://github.com/calrom-jtejero/specflow-retrycore.git</RepositoryUrl>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SpecFlow" Version="3.4.8" />
    <PackageReference Include="SpecFlow.CustomPlugin" Version="3.9.52" />
  </ItemGroup>

</Project>
